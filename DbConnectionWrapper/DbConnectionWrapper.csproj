<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net48;net481;net6.0;net7.0;netcoreapp3.1;netstandard2.0;netstandard2.1</TargetFrameworks>
        <LangVersion>11</LangVersion>
        <Nullable>enable</Nullable>
        <AssemblyName>Pustalorc.DbConnectionWrapper</AssemblyName>
        <RootNamespace>Pustalorc.Libraries.DbConnectionWrapper</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Authors>Pustalorc</Authors>
        <PackageId>Pustalorc.DbConnectionWrapper</PackageId>
        <Description>Library that abstractly wraps DbConnection and a few other types to reduce duplicate code when interacting with a DbConnection and executing queries.</Description>
        <Copyright>Copyright Â© 2020-2022 Pustalorc</Copyright>
        <RepositoryUrl>https://github.com/Pustalorc/DbConnectionWrapper</RepositoryUrl>
        <RepositoryType>Github</RepositoryType>
        <PackageTags>DbConnection Wrapper</PackageTags>
        <PackageReleaseNotes>Added extensions for binding reader results to types automatically to reduce code used.</PackageReleaseNotes>
        <Company>Pustalorc</Company>
        <Product>Pustalorc.DbConnectionWrapper</Product>
        <PackageVersion>1.1.0</PackageVersion>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.1.0</FileVersion>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="JetBrains.Annotations" Version="2022.3.1" />
    </ItemGroup>

</Project>
